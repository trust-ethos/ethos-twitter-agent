{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --env main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch --env main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write --env",
    "test-webhook": "deno run --allow-net --env test-webhook.ts",
    "test-all": "deno run --allow-net --env test-scenarios.ts",
    "test-ethos": "deno run --allow-net --env test-ethos-integration.ts",
    "test-polling": "deno run --allow-net --allow-env --allow-read --allow-write --env test-polling.ts",
    "test-persistence": "deno run --allow-net --allow-read --allow-write --env test-persistence.ts"
  },
  "cron": [
    {
      "name": "ethosAgent-polling",
      "cron": "* * * * *",
      "path": "/cron/poll-mentions"
    }
  ],
  "imports": {
    "@nexterias/twitter-api-fetch": "jsr:@nexterias/twitter-api-fetch@^3.0.1",
    "std/": "https://deno.land/std@0.208.0/",
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "dotenv": "https://deno.land/std@0.208.0/dotenv/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "deno.ns"
    ]
  }
}