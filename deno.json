{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write",
    "test-webhook": "deno run --allow-net test-webhook.ts",
    "test-all": "deno run --allow-net test-scenarios.ts",
    "test-ethos": "deno run --allow-net test-ethos-integration.ts",
    "test-polling": "deno run --allow-net --allow-env --allow-read --allow-write test-polling.ts",
    "test-persistence": "deno run --allow-net --allow-read --allow-write test-persistence.ts",
    "setup": "deno run --allow-read --allow-write --allow-env setup-twitter-api.ts"
  },
  "cron": [
    {
      "name": "ethosAgent-polling",
      "cron": "*/3 * * * *",
      "path": "/cron/poll-mentions"
    }
  ],
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "dotenv": "https://deno.land/std@0.208.0/dotenv/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "deno.ns"
    ]
  }
}